#include <Servo.h>
Servo Servo1;
int const potPin=A5;
int potVal;
int angle;

void setup() {
  Servo1.attach(8);
  Serial.begin(9600);
}


void loop() {
  potVal=analogRead(potPin);
  Serial.print("potVal:");
  Serial.print(potVal);
  angle=map(potVal, 0, 1023, 0, 180);
  Serial.print("angle= ");
  Serial.println(angle);
  delay (50);
}
